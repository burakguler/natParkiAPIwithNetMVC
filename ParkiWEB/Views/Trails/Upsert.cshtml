@model ParkiWEB.Models.TrailsViewModel


@{
    var title = "Create Trail";
}

<form method="post" asp-action="Upsert">

    <div style="margin-bottom:50px; margin-top:100px;border-radius: 15px;" class="card row px-3 py-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Trail.Id != 0)
        {
            <input type="hidden" asp-for="Trail.Id" />
            title = "Edit Trail";
        }
        <div class="col-sm-12 col-md-12 col-lg-12 ">
            <h2 class="text-primary mx-3">@title</h2>
        </div>
            <div class="card-body">
                <div class="col">
                    <div class="form-group row">
                        <div class="col-sm-4 col-md-4 col-lg-3">
                            National Park
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-9">
                            @Html.DropDownListFor(m => m.Trail.NationalParkId,
                           Model.NationalParkList, "Select a Park", new { @class = "form-control" })
                            <span asp-validation-for="Trail.NationalParkId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-md-4 col-lg-3">
                            <label asp-for="Trail.Name"></label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-9">
                            <input asp-for="Trail.Name" class="form-control" />
                            <span asp-validation-for="Trail.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-md-4 col-lg-3">
                            <label asp-for="Trail.Difficulty"></label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-9">
                            <select asp-for="Trail.Difficulty" asp-items="Html.GetEnumSelectList<Trail.DifficultyType>()" class="form-control"></select>
                        </div>

                        @*<div class="col-sm-8 col-md-8 col-lg-9 range"> Range Example for Difficulty
                                <table class="form-control">
                                    <thead>
                                        <tr>
                                            <th class="text text-center text-primary" scope="col">Easy</th>
                                            <th class="text text-center text-success" scope="col">Medium</th>
                                            <th class="text text-center text-warning" scope="col">Hard</th>
                                            <th class="text text-center text-danger" scope="col">Expert</th>
                                        </tr>
                                    </thead>
                                </table>
                                <input asp-for="Trail.Difficulty" oninput="this.nextElementSibling.value=Trail.DifficultyType" type="range" class="form-range form-control" value="1" min="1" max="4" step="1" id="customRange3" />
                                <span asp-validation-for="Trail.Difficulty" class="text-danger"></span>
                            </div>*@
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-md-4 col-lg-3">
                            <label asp-for="Trail.Distance"></label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-9">
                            <input asp-for="Trail.Distance" class="form-control" />
                            <span asp-validation-for="Trail.Distance" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-md-4 col-lg-3">
                            <label asp-for="Trail.Elevation"></label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-9">
                            <input asp-for="Trail.Elevation" class="form-control" />
                            <span asp-validation-for="Trail.Elevation" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <a asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
                        </div>
                        <div class=" col-sm-6 col-md-6 col-lg-6 ">
                            <button type="submit" class="btn btn-success form-control">@(Model.Trail.Id!=0?"Update":"Create")</button>
                        </div>
                    </div>

                </div>   
            </div>
    </div>
</form>